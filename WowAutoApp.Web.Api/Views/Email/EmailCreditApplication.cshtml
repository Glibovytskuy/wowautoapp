@model WowAutoApp.Core.Dto.CreaditApplicationDtos.CreditApplicationDto;
@*@{
        Layout = "../EmailLayouts/SystemEmailLayout";
    }*@

    <div style="text-align: center; font-size: 16px; line-height: 28px; color:#606060; padding: 15px;">
        <h1>Please Check Credit Application account</h1>
        <table>
            <p><b>Personal Info</b></p>
            <tr>
                <td>First Name: </td>
                <td>@Model.FirstName</td>
            </tr>

            <tr>
                <td>Last Name: </td>
                <td>@Model.LastName</td>
            </tr>

            <tr>
                <td>Email: </td>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <td>Mobile Number: </td>
                <td>@Model.MobileNumber</td>
            </tr>

            <tr>
                <td>Phone Number: </td>
                <td>@Model.PhoneNumber</td>
            </tr>

            <p><b>Identification</b></p>
            <tr>
                <td>Date Of Birth: </td>
                <td>@Model.DateOfBirth</td>
            </tr>

            <tr>
                <td>Social Security Number: </td>
                <td>@Model.SocialSecurityNumber</td>
            </tr>

            <p><b>Residence</b></p>
            <tr>
                <td>Street Address: </td>
                <td>@Model.StreetAddress</td>
            </tr>

            <tr>
                <td>House Flat Number: </td>
                <td>@Model.HouseFlatNumber</td>
            </tr>

            <tr>
                <td>City: </td>
                <td>@Model.City</td>
            </tr>

            <tr>
                <td>State: </td>
                <td>@Model.State</td>
            </tr>

            <tr>
                <td>Zip Code: </td>
                <td>@Model.ZipCode</td>
            </tr>

            <tr>
                <td>Monthly Rent: </td>
                <td>@Model.MonthlyRent</td>
            </tr>

            <tr>
                <td>Residence Owner: </td>
                <td>@Model.ResidenceOwner.ToString()</td>
            </tr>

            <p><b>Employment Status</b></p>
            <tr>
                <td>Employment Status: </td>
                <td>@Model.EmploymentStatus.ToString()</td>
            </tr>

            <p><b>Vehicle Interested In</b></p>
            <tr>
                <td>Vehicle Name: </td>
                <td>@Model.VehicleName</td>
            </tr>
            <tr>
                <td>Down Payment: </td>
                <td>@Model.DownPayment</td>
            </tr>

            <tr>
                <td>Total Amount: </td>
                <td>@Model.TotalAmount</td>
            </tr>

            <tr>
                <td>Other Info: </td>
                <td>@Model.OtherInfo</td>
            </tr>
        </table>
    </div>